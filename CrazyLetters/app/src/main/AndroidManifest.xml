    package="com.avtdev.crazyletters">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.CompetitiveSelectionActivity"></activity>
        <activity android:name=".activities.LanguageSelectionActivity" />
        <activity android:name=".activities.ListBaseActivity" />
        <activity android:name=".activities.GameListActivity" />
        <activity android:name=".activities.GameDefinitionActivity" />
        <activity android:name=".activities.GameActivity" />
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4136978037886351~1365918375"/>

