<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/definition_inter_margin"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="@string/game_name"
        android:textStyle="bold"
        android:textSize="@dimen/definition_text_size"
        android:textColor="@color/colorSecondaryLight"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="@string/time"
        android:textStyle="bold"
        android:textSize="@dimen/definition_text_size"
        android:textColor="@color/colorSecondaryLight"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tvLanguages"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="@string/language"
        android:textStyle="bold"
        android:textSize="@dimen/definition_text_size"
        android:textColor="@color/colorSecondaryLight"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tvVelocity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="@string/velocity_max"
        android:textStyle="bold"
        android:textSize="@dimen/definition_text_size"
        android:textColor="@color/colorSecondaryLight"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tvLettersType"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="@string/letter_type"
        android:textStyle="bold"
        android:textSize="@dimen/definition_text_size"
        android:textColor="@color/colorSecondaryLight"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tvLastUsed"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="@string/last_used"
        android:textStyle="bold"
        android:textSize="@dimen/definition_text_size"
        android:textColor="@color/colorSecondaryLight"
        android:gravity="center_horizontal"/>
    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:src="@drawable/ic_tick"
        android:gravity="center_horizontal"
        android:tint="@color/colorSecondaryLight"
        android:visibility="invisible"/>
</LinearLayout>